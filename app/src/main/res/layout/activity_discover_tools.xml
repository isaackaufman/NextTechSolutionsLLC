<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:focusable="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/top_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:src="@drawable/logo1_full_with_llc_1333"/>

        <TextView
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:text="These tools are 100% trusted by Next Tech Solutions LLC, use them to remedy adware infections, clean up data, check the status of your computer and more."
            android:id="@+id/textView2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal"
            android:maxWidth="345dp"
            android:layout_marginBottom="30dp"
            android:textColor="#000" />

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#0064c1"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:id="@+id/mbam"
            android:onClick="onMbamButtonClicked"
            android:text="MBAM - Our recommended antivirus"
            />
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#0064c1"
            android:textColor="#fff"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:id="@+id/ccleaner"
            android:onClick="onCcleanerButtonClicked"
            android:text="CCleaner by Piriform"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#0064c1"
            android:textColor="#fff"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:id="@+id/quote_button"
            android:onClick="onAdwcleanerButtonClicked"
            android:text="Adwcleaner by Xplode"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#0064c1"
            android:textColor="#fff"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:id="@+id/speccy"
            android:onClick="onSpeccyButtonClicked"
            android:text="Speccy by Piriform"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#0064c1"
            android:textColor="#fff"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:id="@+id/recuva"
            android:onClick="onRecuvaButtonClicked"
            android:text="Recuva by Piriform"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>